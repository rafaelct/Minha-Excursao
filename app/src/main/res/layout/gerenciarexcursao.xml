<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:background="@drawable/excursao">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:background="#BBFFFFFF">

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:background="#08C814"
				android:minHeight="40dp">

				<TextView
					android:layout_height="wrap_content"
					android:text="@string/app_name"
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:layout_width="wrap_content"/>

			</LinearLayout>

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="horizontal"
				android:gravity="right"
				android:layout_gravity="right">

				<ImageButton
					android:layout_height="wrap_content"
					style="?android:attr/buttonBarButtonStyle"
					android:layout_width="wrap_content"
					android:src="@drawable/estatistica"
					android:id="@+id/btnEstatisticaExcursao"/>

				<ImageButton
					android:layout_height="wrap_content"
					style="?android:attr/buttonBarButtonStyle"
					android:layout_width="wrap_content"
					android:src="@drawable/mais"
					android:id="@+id/btnAddPassageiro"/>

			</LinearLayout>

		</FrameLayout>

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/lytFrame">

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:background="#55FFEE04">

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:orientation="horizontal">

					<ImageView
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:src="@drawable/onibus"/>

					<LinearLayout
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:orientation="vertical">

						<LinearLayout
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:orientation="horizontal">

							<TextView
								android:layout_height="wrap_content"
								android:text="ExcursÃ£o:"
								android:layout_width="wrap_content"
								android:textStyle="bold"/>

							<TextView
								android:layout_height="wrap_content"
								android:text="Text"
								android:layout_width="wrap_content"
								android:id="@+id/nomeExcursao"/>

						</LinearLayout>

						<LinearLayout
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:orientation="horizontal">

							<TextView
								android:layout_height="wrap_content"
								android:text="lugares:"
								android:layout_width="wrap_content"
								android:textStyle="bold"/>

							<TextView
								android:layout_height="wrap_content"
								android:text="Text"
								android:layout_width="wrap_content"
								android:id="@+id/vagas"/>

							<TextView
								android:layout_height="wrap_content"
								android:text="passagem:"
								android:layout_width="wrap_content"
								android:paddingLeft="10dp"
								android:textStyle="bold"/>

							<TextView
								android:layout_height="wrap_content"
								android:text="Text"
								android:layout_width="wrap_content"
								android:id="@+id/valor"/>

						</LinearLayout>

					</LinearLayout>

				</LinearLayout>

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:orientation="horizontal">

					<TextView
						android:layout_height="wrap_content"
						android:text="valor arrecadado:"
						android:layout_width="wrap_content"
						android:textStyle="bold"/>

					<TextView
						android:layout_height="wrap_content"
						android:text="0"
						android:layout_width="wrap_content"
						android:id="@+id/valorpago"/>

				</LinearLayout>

			</LinearLayout>

		</FrameLayout>

		<ScrollView
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:layout_weight="1.0">

			<LinearLayout
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:id="@+id/lytScroll"/>

		</ScrollView>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:orientation="horizontal"
			android:id="@+id/lAds">

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_height="match_parent"
		android:layout_width="wrap_content"
		android:orientation="vertical"
		android:layout_gravity="right"
		android:id="@+id/lytAddPassageiro"
		android:background="#B0BBF0"
		android:layout_marginBottom="40dp"
		android:layout_marginTop="41dp"
		android:visibility="invisible">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:layout_height="wrap_content"
				android:text="Adicionar Passageiro"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="wrap_content"
				android:background="#2B88B4"/>

		</LinearLayout>

		<ScrollView
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:layout_weight="1.0">

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:id="@+id/lytScrollAddPassageiro"/>

		</ScrollView>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:orientation="horizontal">

			<Button
				android:layout_height="wrap_content"
				android:text="Novo Passageiro"
				android:layout_width="wrap_content"
				android:id="@+id/btnCadPassageirosExcursao"/>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:layout_gravity="center"
		android:id="@+id/lytTrocaPassageiros"
		android:layout_marginBottom="70dp"
		android:layout_marginTop="90dp"
		android:layout_marginLeft="15dp"
		android:layout_marginRight="15dp"
		android:background="#D2DC2C"
		android:visibility="invisible"/>

</FrameLayout>

