<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/excursao">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		android:background="#BBFFFFFF"
		android:id="@+id/lytPrincipal">

		<LinearLayout
			android:background="#08C814"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<TextView
				android:layout_height="wrap_content"
				android:text="@string/app_name"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_width="wrap_content"/>

		</LinearLayout>

		<ScrollView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_weight="1.0">

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:orientation="vertical">

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:orientation="horizontal">

					<ImageView
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:src="@drawable/passageiro"/>

					<TextView
						android:layout_height="wrap_content"
						android:text="Nome:"
						android:layout_width="wrap_content"
						android:textStyle="bold"/>

					<EditText
						android:layout_height="wrap_content"
						android:inputType="textPersonName"
						android:ems="10"
						android:layout_width="wrap_content"
						android:id="@+id/txtNome"/>

				</LinearLayout>

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:orientation="horizontal">

					<ImageView
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:src="@drawable/rg"/>

					<TextView
						android:layout_height="wrap_content"
						android:text="RG:"
						android:layout_width="wrap_content"
						android:textStyle="bold"/>

					<EditText
						android:layout_height="wrap_content"
						android:inputType="text"
						android:ems="10"
						android:layout_width="wrap_content"
						android:id="@+id/txtRg"/>

				</LinearLayout>

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:orientation="horizontal">

					<ImageView
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:src="@drawable/bolo"/>

					<TextView
						android:layout_height="wrap_content"
						android:text="Data de nascimento:"
						android:layout_width="wrap_content"
						android:textStyle="bold"/>

					<EditText
						android:layout_height="wrap_content"
						android:inputType="date"
						android:ems="10"
						android:layout_width="wrap_content"
						android:id="@+id/txtDtNasc"/>

				</LinearLayout>

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:orientation="horizontal">

					<ImageView
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:src="@drawable/casal"/>

					<TextView
						android:layout_height="wrap_content"
						android:text="Nome do responsavel:"
						android:layout_width="wrap_content"
						android:textStyle="bold"/>

					<EditText
						android:layout_height="wrap_content"
						android:inputType="textPersonName"
						android:ems="10"
						android:layout_width="wrap_content"
						android:id="@+id/txtNomeResp"/>

				</LinearLayout>

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:orientation="horizontal">

					<ImageView
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:src="@drawable/rg"/>

					<TextView
						android:layout_height="wrap_content"
						android:text="RG do responsavel:"
						android:layout_width="wrap_content"
						android:textStyle="bold"/>

					<EditText
						android:layout_height="wrap_content"
						android:inputType="textPersonName"
						android:ems="10"
						android:layout_width="wrap_content"
						android:id="@+id/txtRgResp"/>

				</LinearLayout>

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">

					<ImageView
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:src="@android:drawable/ic_delete"/>

					<TextView
						android:layout_height="wrap_content"
						android:text="Tel. Res.:"
						android:layout_width="wrap_content"
						android:textStyle="bold"/>

					<EditText
						android:layout_height="wrap_content"
						android:inputType="phone"
						android:ems="10"
						android:layout_width="wrap_content"
						android:id="@+id/txtTelRes"/>

				</LinearLayout>

				<LinearLayout
					android:layout_height="wrap_content"
					android:layout_width="match_parent">

					<ImageView
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:src="@android:drawable/ic_delete"/>

					<TextView
						android:layout_height="wrap_content"
						android:text="Tel. Cel. :"
						android:layout_width="wrap_content"
						android:textStyle="bold"/>

					<EditText
						android:layout_height="wrap_content"
						android:inputType="phone"
						android:ems="10"
						android:layout_width="wrap_content"
						android:id="@+id/txtTelCel"/>

				</LinearLayout>

			</LinearLayout>

		</ScrollView>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:id="@+id/lAds">

		</LinearLayout>

	</LinearLayout>

	<ImageButton
		android:layout_height="wrap_content"
		style="?android:attr/buttonBarButtonStyle"
		android:layout_width="wrap_content"
		android:src="@drawable/save"
		android:layout_gravity="bottom|right"
		android:layout_marginRight="45dp"
		android:layout_marginBottom="80dp"
		android:id="@+id/btnSalvarPassageiro"/>

</FrameLayout>

