<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="#A9FBC1"
	android:id="@+id/lytTroca">

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="vertical"
		android:background="#C8C42D">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:layout_height="wrap_content"
				android:text="Substituir Passageiro"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="wrap_content"
				android:textStyle="bold"/>

			<FrameLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent">

				<ImageView
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:src="@android:drawable/ic_delete"
					android:layout_gravity="right"
					android:layout_marginRight="10dp"
					android:layout_marginEnd="10dp"
					android:id="@+id/btncancelartroca"/>

			</FrameLayout>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal">

			<TextView
				android:layout_height="wrap_content"
				android:text="Passageiro:"
				android:layout_width="wrap_content"
				android:textStyle="bold"/>

			<TextView
				android:layout_height="wrap_content"
				android:text="Text"
				android:layout_width="wrap_content"
				android:id="@+id/txtPassageiroTroca"/>

		</LinearLayout>

	</LinearLayout>

	<ScrollView
		android:layout_height="match_parent"
		android:layout_width="match_parent">

		<LinearLayout
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:orientation="vertical"
			android:id="@+id/lytScrollTrocaPassageiro"/>

	</ScrollView>

</LinearLayout>

